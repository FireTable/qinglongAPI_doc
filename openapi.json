                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "任务 ID"
                          },
                          "name": {
                            "type": "string",
                            "description": "任务名称",
                            "example": "任务名"
                          },
                          "command": {
                            "type": "string",
                            "description": "任务命令",
                            "example": "task helloworld.py"
                          },
                          "schedule": {
                            "type": "string",
                            "description": "任务定时",
                            "example": "0 0 * * *"
                          },
                          "timestamp": {
                            "type": "string",
                            "description": "时间戳",
                            "example": "Wed Feb 09 2022 13:08:45 GMT+0800 (中国标准时间)"
                          },
                          "saved": {
                            "type": "boolean"
                          },
                          "status": {
                            "type": "integer",
                            "example": 1
                          },
                          "isSystem": {
                            "type": "integer"
                          },
                          "pid": {
                            "type": "integer",
                            "example": null
                          },
                          "isDisabled": {
                            "type": "integer"
                          },
                          "isPinned": {
                            "type": "integer"
                          },
                          "log_path": {
                            "type": "string"
                          },
                          "labels": {
                            "type": "array",
                            "description": "任务标签",
